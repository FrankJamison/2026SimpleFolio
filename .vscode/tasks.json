{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Open in Browser",
            "type": "shell",
            "command": "start",
            "args": [
                "chrome",
                "http://simplefolio.localhost:1234/"
            ],
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "npm: install",
            "type": "shell",
            "command": "npm",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "npm: start",
            "type": "shell",
            "command": "npm",
            "args": [
                "start"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Dev: install + start",
            "dependsOn": [
                "npm: install",
                "npm: start"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}
